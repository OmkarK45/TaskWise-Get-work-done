        <a href="#"><i class="far fa-file"></i><span class="icon-text"> Documents</span></a>
        <a href="#"><i class="far fa-chart-bar"></i><span class="icon-text">Reports</span></a>
    </div>
    <!-- Main Section -->
    <section class="main-section">
        <section class="dashboard-header">
            <div class="search-bar">
                <i class="far fa-search"></i>
                <form action="/search" method="POST">
                    <input type="text" placeholder="Search..." />
                </form>
            </div>
            <div class="user-info">
                <p><%= user.name %></p>
                <a class="btn-light" href="/user/logout"><i class="far fa-sign-out-alt"></i>Logout</a>
            </div>
        </section>
        <div class="main-thing">
            <div class="main-thing-heading">
                <h4>My Tasks.</h4>
                <label for="modal-1" class="btn-semiDark"><i class="far fa-plus-circle"></i> Add New</label>

                <!-- MODAL FOR NEW TASK -->
                <input class="modal-state" id="modal-1" type="checkbox" />
                <div class="modal">
                    <label class="modal__bg" for="modal-1"></label>
                    <div class="modal__inner">
                        <label class="modal__close" for="modal-1"></label>
                        <h3 class="text-center">Create new task</h3>
                        <!-- Form goes here -->
                        <form action="/new" method="POST" class="box" id="form">
                            <div class="form-control">
                                <label for="taskname">Task</label>
                                <input type="text" id="taskTitle" name="taskTitle" placeholder="Task Title">
                            </div>
                            <div class="form-control">
                                <label for="tasksub">Subtitle</label>
                                <input type="text" id="taskSubtitle" name="taskSubtitle" placeholder="Subtitle">
                            </div>
                            <div class="form-control">
                                <label for="taskname">Description</label>
                                <!-- <input type="text" id="taskDesc" name="taskDesc" placeholder="Description"> -->
                                <textarea name="description" id="" cols="30" rows="10">
                                    asdfasdfds
                                </textarea>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <!-- Main Container -->
            <div class="flex flex-wrap w-full container-wrapper px-2">
                <!-- Ongoing Tasks -->
                <div class="w-full sm:w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mb-4">
                    <p>Ongoing Tasks</p>
                    <div class="card-wrapper">
                        <!-- Card here OK -->
                        <div class="card">
                            <!-- Span Category-->
                            <span class="task-category">Chilling</span>
                            <!-- Task Title -->
                            <h3 class="task-title">Watch Sherlock</h3>
                            <!-- Task Subtitle -->
                            <h6 class="task-subtitle">On Netflix</h6>
                            <!-- Task Description -->
